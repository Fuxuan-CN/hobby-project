# EditorConfig is awesome: https://EditorConfig.org

# 通用配置，适用于所有文件
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python文件特定配置
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88  # 符合Black格式化工具的默认设置

# 测试文件和脚本同样适用
[*.{pyw,pyi}]
indent_style = space
indent_size = 4

#  requirements文件
[requirements*.txt]
indent_style = space
indent_size = 4
